;; === appl ===========================

(use-modules (ffi ffi-help-rt))
(use-modules (ffi cairo))

(define my-pool-id #f)                  ; shm_pool id
(define my-surf-id #f)                  ; wl_surface id
(define my-buf-id #f)                   ; wl_buffer id
(define my-buf-bv #f)                   ; buffer bv
(define my-buf-fd #f)                   ; buffer fd
(define my-xsrf-id #f)                  ; xdg_surface
(define my-topl-id #f)                  ; toplevel

#|
(define-record-type <shm-pool>
  (make-shm-pool port fd size bv)
  shm-pool?
  (port shm-pool-port)
  (fd shm-pool-fd)
  (size shm-pool-size)
  (bv shm-pool-bv))
|#

(define* (create-file-buffer #:optional (size #x1000000))
  (let* ((port (let ((port (tmpfile))) (truncate-file port size) port))
         (fd (port->fdes port))
         (bv (my-mmap 0 size (logior PROT_READ PROT_WRITE) MAP_SHARED fd 0)))
    (set! my-buf-bv bv)
    (set! my-buf-fd fd)
    (if #f #f)))

(define (draw-buffer-1)
  (let loop ((ix 0) (iy 0) (lt #xff666666) (rt #xffeeeeee))
    (cond
     ((< ix 500)
      (if (< (remainder ix 16) 8)
          (bytevector-u32-native-set! my-buf-bv (+ (* iy 2000) (* ix 4)) lt)
          (bytevector-u32-native-set! my-buf-bv (+ (* iy 2000) (* ix 4)) rt))
      (loop (1+ ix) iy lt rt))
     ((< iy 300)
      (if (= (remainder iy 16) 15)
          (loop 0 (1+ iy) rt lt)
          (loop 0 (1+ iy) lt rt)))))
  (if #f #f))

(define (draw-buffer-2)
  (let* ((format 'CAIRO_FORMAT_ARGB32)
         (format 'CAIRO_FORMAT_RGB24)
         (buffer my-buf-bv)
         (width 500) (height 300) (stride (* width 4))
         (srf (cairo_image_surface_create_for_data
               buffer format width height stride))
         (cro (cairo_create srf))
         (extents (make-cairo_text_extents_t))
         (text "Hello, world!"))
    (bytevector-fill! buffer #xee)
    
    (cairo_move_to cro 0.0 0.0)
    (cairo_move_to cro 20.0 20.0)
    (cairo_line_to cro 120.0 120.0)
    (cairo_stroke cro)

    (cairo_select_font_face
     cro "Sans" 'CAIRO_FONT_SLANT_NORMAL 'CAIRO_FONT_WEIGHT_NORMAL)
    (cairo_set_font_size cro 32.0)
    (cairo_text_extents cro text (pointer-to extents))
    (cairo_move_to cro 50.0 50.0)
    (cairo_show_text cro text)

    (if #f #f)))

(define (draw-buffer-3)
  (let* ((format 'CAIRO_FORMAT_RGB24)
         (buffer my-buf-bv)
         (width 500) (height 300) (stride (* width 4))
         (srf (cairo_image_surface_create_for_data
               buffer format width height stride))
         (cr (cairo_create srf))
         (xc 128.0) (yc 128.0) (radius 100.0)
         (angle1 (* 45.0 (/ M_PI 180.0)))
         (angle2 (* 180.0 (/ M_PI 180.0))))
    (bytevector-fill! buffer #xee)
    
    (cairo_set_line_width cr 10.0)
    (cairo_arc cr xc yc radius angle1 angle2)
    (cairo_stroke cr)

    (cairo_set_source_rgba cr 1 0.2 0.2 0.6)
    (cairo_set_line_width cr 6.0)

    (cairo_arc cr xc yc 10.0 0.0 (* 2.0 M_PI))
    (cairo_fill cr)

    (cairo_arc cr xc yc radius angle1 angle1)
    (cairo_line_to cr xc yc)
    (cairo_arc cr xc yc radius angle2 angle2)
    (cairo_line_to cr xc yc)
    (cairo_stroke cr)))


(define draw-buffer draw-buffer-2)


;; read xdg_surface description in xdg-shell.xml
(define (create-it)
  (set! io-debug #f)
  (set! my-surf-id (let* ((id (alloc-id)))
                     (wl_compositor:create_surface comp-id id)
                     (set-object! id 'wl_surface show-it)
                     id))
  (set! my-xsrf-id (let ((id (alloc-id)))
                     (xdg_wm_base:get_xdg_surface base-id id my-surf-id)
                     (set-object! id 'xdg_surface show-it)
                     id))
  (set! my-topl-id (let ((id (alloc-id)))
                     (xdg_surface:get_toplevel my-xsrf-id id)
                     (set-object! id 'xdg_toplevel)
                     id))
  (xdg_toplevel:set_title my-topl-id "wl-play")
  (xdg_toplevel:set_max_size my-topl-id 500 300)
  (xdg_toplevel:set_min_size my-topl-id 500 300)
  (wl_surface:commit my-surf-id)
  (if #f #f))

;; This gets called in response to xdg_surface:configure event.
(define (show-it obj-id)
  (let ((id (alloc-id)))
    ;; 300 x 500 x 4 = 600000
    (wl_shm:create_pool shm-id id my-buf-fd #x1000000)
    (set-object! id 'wl_shm_pool)
    (set! my-pool-id id)
    id)
  (let* ((id (alloc-id))
         (offset 0) (width 500) (height 300) (stride (* width 4)) (format 1))
    (wl_shm_pool:create_buffer my-pool-id id offset width height stride format)
    (set-object! id 'wl_buffer)
    (set! my-buf-id id)
    id)
  (wl_shm_pool:destroy my-pool-id)
  (set! my-pool-id #f)
  (draw-buffer)
  (wl_surface:attach my-surf-id my-buf-id 0 0)
  (wl_surface:commit my-surf-id)
  (if #f #f))

(appl-main)

